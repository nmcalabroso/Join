<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/session_list_row_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <RelativeLayout android:id="@+id/left_data"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView android:id="@+id/textview_row_peer_name"
            android:text=""
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp"
            android:singleLine="true"
            android:gravity="start"  />

        <TextView android:id="@+id/network_features"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_row_peer_name"
            android:gravity="start" />

    </RelativeLayout>

    <TextView
        android:id="@+id/network_level"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="#ff0000"
        android:layout_toRightOf="@+id/left_data"
        android:layout_toEndOf="@id/left_data"
        android:gravity="center"
        android:layout_centerVertical="true"/>
</RelativeLayout>
